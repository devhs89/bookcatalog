<!--The admins login page.-->
<div class="row row-cols-2 mb-3 mb-md-0">
  <div class="col">
    <%= link_to "Categories", categories_path, class: 'btn btn-dark' %>
  </div>
  <div class="col">
    <%= link_to "Home", books_path, class: 'pull-right btn btn-dark' %>
  </div>
</div>
<div class="row mb-3">
  <div class="col-12 text-center">
    <h2>Admin Login</h2>
  </div>
</div>
<%= form_with url: admins_login_path do |form| %>
  <div class="row col-lg-8 row-cols-1 row-cols-md-2 g-3 mx-auto">
    <div class="col">
      <%= form.label :email, 'Email', class: 'form-lebel' %>
      <%= form.email_field :email, class: 'form-control' %>
    </div>
    <div class="col">
      <%= form.label :password, 'Password', class: 'form-lebel' %>
      <%= form.password_field :password, class: 'form-control' %>
    </div>
    <div class="col">
      <%= form.submit 'Login', class: 'btn btn-primary px-5' %>
    </div>
  </div>
<% end %>
