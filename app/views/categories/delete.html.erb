<!--View that asks for the "Delete" confirmation.-->
<div class="row mb-3">
	<div class="col-2">
		<%= link_to "Categories", categories_path, class: 'btn btn-dark' %>
	</div>
	<div class="col-8 text-center">
		<h2>Delete "<span class="text-danger"><%= @category.name.capitalize %></span>" Category</h2>
	</div>
	<div class="col-2">
		<%= link_to "Home", books_path, class: 'pull-right btn btn-dark' %>
	</div>
</div>
<div>
	<div class="row col-7 mx-auto">
		<div class="row mb-3">
			<span>Are you sure you want to delete this category?</span>
		</div>
		<% unless @category.books.empty? %>
			<div class="row mb-3">
				<span><span class="text-danger">Caution: </span> These books will also be deleted - </span>
				<div class="col-5 ms-5">
					<ol>
						<% @category.books.each do |book| %>
							<li><%= book.title.titleize %></li>
						<% end %>
					</ol>
				</div>
			</div>
		<% end %>
		<div class="row gx-2">
			<div class="col-6">
				<%= link_to 'Cancel', categories_path, class: 'btn btn-primary pull-right' %>
			</div>
			<div class="col-6">
				<%= form_with model: @category, method: 'delete' do |form| %>
					<%= form.submit 'Delete', class: 'btn btn-danger' %>
				<% end %>
			</div>
		</div>
	</div>
</div>

